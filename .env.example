# ConusAI Tools - Environment Variables Template
# Copy this file to .env and fill in your API keys
# Shared by backend (Python) and frontend (Next.js)

# =============================================================================
# AI Model API Keys
# =============================================================================

# OpenAI - https://platform.openai.com/api-keys
OPENAI_API_KEY=""

# Anthropic (Claude) - https://console.anthropic.com/
ANTHROPIC_API_KEY=""

# Google (Gemini) - https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=""

# xAI (Grok) - https://console.x.ai/
XAI_API_KEY=""

# DeepSeek - https://platform.deepseek.com/
DEEPSEEK_API_KEY=""

# Mistral - https://console.mistral.ai/
MISTRAL_API_KEY=""

# Groq (fast inference) - https://console.groq.com/
GROQ_API_KEY=""

# =============================================================================
# Cloudflare Turnstile CAPTCHA (optional)
# Get keys at: https://dash.cloudflare.com/?to=/:account/turnstile
# =============================================================================

# Public site key (exposed to browser)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=""

# Secret key (server-side only)
TURNSTILE_SECRET_KEY=""

# =============================================================================
# PostHog Analytics (optional)
# Get keys at: https://posthog.com/
# =============================================================================

NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST="https://eu.i.posthog.com"

# =============================================================================
# Docker/Swarm Settings
# =============================================================================

# Image tag for deployments (latest, sha, or version)
IMAGE_TAG="latest"

# =============================================================================
# Application Settings (optional)
# =============================================================================

# Default output directory for generated files
OUTPUT_DIR="data/generated"

# Default reports directory
REPORTS_DIR="data/reports"
